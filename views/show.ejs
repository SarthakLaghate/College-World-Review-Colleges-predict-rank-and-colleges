<%- include("partials/header") %> 

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead" style="color:white;">College Review</p>
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item ">Info 2</li>
				<li class="list-group-item ">Info 3</li>
		</div>
			<div class="col-md-9">
				<div class="thumbnail">
					<img src="<%= college.image%>">
					<div class="caption full">
						<h1><%=college.name %></h1>
						<p><%= college.description %></p>
						<a class="btn btn-warning" href="/college/<%=college._id%>/edit">Edit</a>

						<form action="/college/<%= college._id %>?_method=DELETE" method="POST" style="display:inline">
							<button class="btn btn-danger">Delete</button>
						</form>
					</div>

				</div>

				<div>
					<div class="text-right">

						<a href="/college/<%= college._id%>/comments/new" class="btn btn-success">Add a new comment</a>
					</div>
					<hr>

						<% college.comments.forEach(function(comment){ %>
							<div class="row" style="background:#d9d9d9;border-radius: 7px;">
								<div class="col-md-12">
									<hr>
									<strong><%=comment.author.username%></strong> -
									<p>	
									 	<%= comment.text%>
									</p>
									
								</div>
							</div>

						
						<% }); %>



				</div>

				
			</div>
		
	</div>

</div>
<hr>

<%- include("partials/footer") %>